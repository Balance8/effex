{
  "name": "@workspace/database",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun scripts/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "drizzle-kit": "^0.31.5"
  },
  "dependencies": {
    "@effect/platform": "^0.91.1",
    "@effect/schema": "^0.75.5",
    "@effect/sql": "^0.45.0",
    "@effect/sql-pg": "^0.46.0",
    "drizzle-orm": "^0.44.6",
    "effect": "^3.17.14",
    "postgres": "^3.4.5"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/effect-client.ts",
      "default": "./src/effect-client.ts"
    },
    "./schema": {
      "types": "./src/schema.ts",
      "default": "./src/schema.ts"
    },
    "./effect/schemas/*": {
      "types": "./src/generated/effect/schemas/*.ts",
      "default": "./src/generated/effect/schemas/*.ts"
    },
    "./effect/services/*": {
      "types": "./src/generated/effect/services/*.ts",
      "default": "./src/generated/effect/services/*.ts"
    }
  }
}
