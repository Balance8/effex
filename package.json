{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write --unsafe",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@acme/docs^... && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@changesets/cli": "^2.27.1",
    "husky": "^9.1.7",
    "turbo": "^2.5.8",
    "ultracite": "5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "with-changesets",
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
