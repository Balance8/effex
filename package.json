{
  "name": "effex",
  "version": "0.0.1",
  "description": "A CLI tool to scaffold a Turbo repo with Next.js, Prisma, Biome with Ultracite, and Effect-TS",
  "type": "module",
  "bin": {
    "effex": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write --unsafe",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish",
    "prepare": "husky",
    "test": "bun test"
  },
  "dependencies": {
    "@effect/cli": "^0.51.0",
    "@effect/platform": "^0.91.1",
    "@effect/platform-node": "^0.97.0",
    "@effect/schema": "^0.75.5",
    "@mrleebo/prisma-ast": "^0.13.0",
    "effect": "^3.17.14",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@changesets/cli": "^2.27.1",
    "@types/bun": "^1.1.14",
    "@types/node": "^20.19.9",
    "husky": "^9.1.7",
    "tsup": "^8.3.5",
    "typescript": "^5.9.2",
    "ultracite": "5.6.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.0",
  "keywords": [
    "cli",
    "scaffold",
    "turborepo",
    "nextjs",
    "prisma",
    "effect-ts",
    "biome",
    "ultracite"
  ],
  "author": "Michael Slocum",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Balance8/effex.git"
  },
  "bugs": {
    "url": "https://github.com/Balance8/effex/issues"
  },
  "homepage": "https://github.com/Balance8/effex#readme"
}
