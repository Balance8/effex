{
  "name": "effex",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo for create-effex-app - A CLI tool to scaffold modern full-stack apps",
  "scripts": {
    "build": "cd packages/create-effex-app; bun run build",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write --unsafe",
    "clean": "git clean -fdx -e '.env*' && bun install",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.1.14",
    "@types/node": "^20.19.9",
    "husky": "^9.1.7",
    "typescript": "^5.9.2",
    "ultracite": "5.6.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.0",
  "keywords": [
    "cli",
    "scaffold",
    "turborepo",
    "nextjs",
    "prisma",
    "effect-ts",
    "biome",
    "ultracite"
  ],
  "author": "Michael Slocum",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Balance8/effex.git"
  },
  "bugs": {
    "url": "https://github.com/Balance8/effex/issues"
  },
  "homepage": "https://github.com/Balance8/effex#readme",
  "workspaces": [
    "packages/*"
  ]
}
